// https://code.visualstudio.com/docs/languages/jsconfig
{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "strict": true,
    "strictNullChecks": true,
    "rootDirs": [
      "./src"
    ],
    "target": "es2020"
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
