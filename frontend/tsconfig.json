{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "module": "es2020",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@back/*": [
        "../backend/src/*"
      ],
    },
    "strict": true,
    "strictNullChecks": true,
    "rootDirs": [
      "./src"
    ],
    "target": "es2020",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
      "vite/client",
    ]
  },
  "include": [
    "vite.config.*s",
    "vitest.workspace.ts",
    ".eslintrc.cjs",
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "./dist"
  ]
}
